# Joblix Environment Variables
# Copy to .env and fill in your values

# Your Firebase Database URL (for Joblix's own database)
FIREBASE_DATABASE_URL=https://your-Joblix-project.firebaseio.com

# Firebase Service Account JSON (paste entire JSON as single line)
# Get from: Firebase Console > Project Settings > Service Accounts > Generate New Private Key
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"..."}

# Timezone for cron jobs (optional, defaults to UTC)
TIMEZONE=Asia/Kolkata
